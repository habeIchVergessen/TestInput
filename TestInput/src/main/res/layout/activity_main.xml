<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="org.habeIchVergessen.testinput.MainActivity"
    android:background="#000000"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:clickable="false">

    <!-- default_content -->
    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="125dp"
        android:id="@+id/default_content"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true">

        <!-- phone widget -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:columnCount="6"
            android:rowCount="6"
            android:columnOrderPreserved="true"
            android:id="@+id/phone_widget"
            android:layout_centerHorizontal="true"
            android:layoutMode="opticalBounds">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="6"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/caller_name"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="24sp"
                android:id="@+id/caller_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/caller_number"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="6"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:id="@+id/caller_number" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="6"
                android:layout_row="4"
                android:layout_rowSpan="2"
                android:layout_gravity="center"
                android:gravity="center|center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/call_accept_slide"
                    android:layout_alignParentEnd="false"
                    android:background="@drawable/ic_call_accept_slide"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentBottom="false" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/call_reject_slide"
                    android:layout_alignParentEnd="false"
                    android:background="@drawable/ic_call_reject_slide"
                    android:layout_alignParentStart="false"
                    android:layout_gravity="center_vertical"
                    android:layout_toEndOf="@id/call_accept_slide"
                    android:layout_toRightOf="@+id/call_accept_slide" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="6"
                android:layout_row="2"
                android:layout_rowSpan="4"
                android:id="@+id/call_accept_panel">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/ic_call_accept"
                    android:layout_centerVertical="true"
                    android:id="@+id/call_accept_button"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="6"
                android:layout_row="2"
                android:layout_rowSpan="4"
                android:id="@+id/call_reject_panel">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/call_reject_button"
                    android:background="@drawable/ic_call_reject"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

        </GridLayout>

        <!-- other widgets place here -->
        <RelativeLayout
            android:id="@+id/overlay_content_widget"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>

        <!-- option widget -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:id="@+id/option_widget"
            android:visibility="invisible">

            <!-- option_widget_background -->
            <RelativeLayout
                android:id="@+id/option_widget_background"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha=".75"
                android:background="#000000"
                android:layout_gravity="fill"></RelativeLayout>


            <!-- option_widget_options -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:id="@+id/option_widget_options"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/option_01"
                    android:visibility="visible"
                    android:src="@drawable/ic_phone_speaker_on"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="35dp"
                    android:padding="2dp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/option_02"
                    android:visibility="visible"
                    android:src="@drawable/ic_camera"
                    android:alpha="1"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_marginTop="45dp"
                    android:onClick="sendFireCamera"
                    android:layout_toRightOf="@+id/option_01"
                    android:padding="2dp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/option_03"
                    android:visibility="visible"
                    android:src="@drawable/ic_phone_speaker_off"
                    android:alpha="1"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_toLeftOf="@+id/option_01"
                    android:layout_marginTop="45dp"
                    android:padding="2dp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/option_04"
                    android:visibility="visible"
                    android:src="@drawable/ic_appwidget_torch_off"
                    android:onClick="sendToggleTorch"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_toRightOf="@+id/option_02"
                    android:layout_marginTop="72dp"
                    android:padding="2dp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/option_05"
                    android:visibility="visible"
                    android:src="@drawable/ic_phone_flight_mode"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_toLeftOf="@+id/option_03"
                    android:layout_marginTop="72dp"
                    android:padding="2dp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/option_12"
                    android:visibility="visible"
                    android:src="@drawable/ic_phone_speaker_on"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_marginTop="0dp"
                    android:padding="2dp"
                    android:layout_alignParentStart="false"
                    android:layout_toRightOf="@+id/option_01" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/option_13"
                    android:visibility="visible"
                    android:src="@drawable/ic_phone_speaker_on"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_marginTop="0dp"
                    android:padding="2dp"
                    android:layout_alignParentStart="false"
                    android:layout_toLeftOf="@+id/option_01" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/option_14"
                    android:visibility="visible"
                    android:src="@drawable/ic_phone_speaker_on"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_marginTop="25dp"
                    android:padding="2dp"
                    android:layout_alignParentStart="false"
                    android:layout_toRightOf="@+id/option_02" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/option_15"
                    android:visibility="visible"
                    android:src="@drawable/ic_phone_speaker_on"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_marginTop="25dp"
                    android:padding="2dp"
                    android:layout_alignParentStart="false"
                    android:layout_toLeftOf="@+id/option_03" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <!-- menu_widget -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:layout_centerHorizontal="true"
        android:id="@+id/menu_widget"
        android:layout_below="@+id/default_content"
        android:visibility="visible">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_button"
            android:focusable="false"
            android:clickable="false"
            android:contentDescription=""
            android:layout_centerInParent="true"
            android:background="@drawable/menu_button"
            android:focusableInTouchMode="false" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:columnCount="2"
        android:rowCount="1"
        android:columnOrderPreserved="false"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout"
        android:visibility="invisible">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tfTest"
            android:layout_alignParentStart="false"
            android:gravity="fill_horizontal|fill_vertical"
            android:maxLines="1"
            android:editable="true"
            android:enabled="true"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:layout_column="0"
            android:layout_row="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bTest_Label"
            android:id="@+id/bTest"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:enabled="true"
            android:layout_column="1"
            android:layout_row="0" />

    </GridLayout>

</RelativeLayout>
